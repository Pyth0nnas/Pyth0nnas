"""
Inheritance practice task 1. I have created
class Instrument and 3 classes inheritors that are describing more sepcified instrument
categories that have different method "play" each.
"""
class Instrument:
    def __init__(self, name: str, sound: str):
        self.name = name
        self.sound = sound
    
    def play(self) -> str:
        return f"{self.name} makes a sound: {self.sound}"
class StringInstrument(Instrument):
    def __init__(self, name, sound, strings: int):
        super().__init__(name, sound)
        self.strings = strings
    def play(self):
        return f"{self.name} with {self.strings} strings makes sound {self.sound}"
class WindInstrument(Instrument):
    def __init__(self, name, sound, material: str):
        super().__init__(name, sound)
        self.material = material
    def play(self):
        return f"{self.name} made of {self.material} makes sound: {self.sound}"
class PercussionInstrument(Instrument):
    def __init__(self, name, sound):
        super().__init__(name, sound)
    def play(self):
        return f"{self.name} is struck and makes sound: {self.sound}"
    

import math
class Shape:
    def __init__(self, name: str, color: str):
        self.name = name
        self.color = color
    def get_area(self):
        return None
    def get_perimeter(self):
        return None
    def get_info(self):
        return f"this shape is {self.name} and its color is {self.color}"
class Rectangle(Shape):
    def __init__(self, name, color, width: float, height: float):
        super().__init__(name, color)
        self.width = width
        self.height = height
    def get_area(self):
        area = self.width * self.height
        return area
    def get_perimeter(self):
        perimeter = 2*(self.width + self.height)
        return perimeter
    def get_info(self):
        return f"this rectangles name is {self.name}, its color is {self.color}"
class Circle(Shape):
    def __init__(self, name, color, radius):
        super().__init__(name, color)
        self.radius = radius
    def get_area(self):
        return self.radius*self.radius*3.14
    def get_perimeter(self):
        return self.radius*2*3.14
    def get_info(self):
        return f"this circles name is {self.name}, its color is {self.color}"
class Triangle(Shape):
    def __init__(self, name, color, side1: float, side2: float, side3: float):
        super().__init__(name, color)
        self.side1 = side1
        self.side2 = side2 
        self.side3 = side3
        self.perimeter = self.side1 + self.side2 + self.side3
    def get_perimeter(self):
        return self.perimeter
    def get_area(self):
        area = math.sqrt(self.perimeter*(self.perimeter-self.side1)*(self.perimeter-self.side2)*(self.perimeter-self.side3))
        return area
    def is_right_triangle(self):
        if self.side1*self.side1+self.side2*self.side2 == self.side3*self.side3 or self.side1*self.side1+self.side3*self.side3 == self.side2*self.side2 or self.side3*self.side3+self.side2*self.side2 == self.side1*self.side1:
            return True
        else:
            return False
    def get_info(self):
        return super().get_info()
class Square(Rectangle):
    def __init__(self, name, color, side: float):
        super().__init__(name, color, side, side)
        self.side = side
    def get_diagonal(self):
        diagonal = math.sqrt(self.side**2*2)
        return diagonal
    def get_info(self):
        return super().get_info()
    
class Vehicle:
    def __init__(self, brand: str, model: str, year: int, mileage: float):
        self.brand = brand
        self.model = model
        self.year = year
        self.mileage = mileage
    def get_mileage(self):
        return self.mileage
    def get_info(self):
        return f"this vehicles brand is {self.brand}, its model {self.model}, year {self.year} and mileage {self.mileage}"
    def travel(self, distance: float):
        self.mileage += distance
    def get_age(self, current_year: int):
        return current_year-self.year
class HasGPS:
    def __init__(self, has_gps: bool):
        self.has_gps = has_gps
    def get_gps_status(self):
        if self.has_gps:
            return f"vehicle has GPS"
        else:
            return f"vehicle has no GPS"
class Electric:
    def __init__(self, battery_capacity: float):
        self.battery_capacity = battery_capacity
    def get_battery_info(self):
        return f"vehicles battery capacity is - {self.battery_capacity}"
class LandVehicle(Vehicle):
    def __init__(self, brand, model, year, mileage, wheel_count: int):
        super().__init__(brand, model, year, mileage)
        self.wheel_count = wheel_count
    def get_info(self):
        return f"{super().get_info()}, this is also a land vehicle with {self.wheel_count} wheels"
class Car(LandVehicle):
    def __init__(self, brand, model, year, mileage, wheel_count, doors_count: int):
        super().__init__(brand, model, year, mileage, wheel_count)
        self.doors_count = doors_count
    def get_info(self):
        return f"{super().get_info()} this is also a car with {self. doors_count} doors"
class ElectricCar(Car):
    def __init__(self, brand, model, year, mileage, wheel_count, doors_count, charge_time: float):
        super().__init__(brand, model, year, mileage, wheel_count, doors_count)
        self.charge_time = charge_time
    def get_info(self):
        return f"{super().get_info()} this is also an electric car with {self.charge_time} minutes charging time"
class Truck(LandVehicle):
    def __init__(self, brand, model, year, mileage, wheel_count, max_load: float):
        super().__init__(brand, model, year, mileage, wheel_count)
        self.max_load = max_load
    def get_info(self):
        return f"{super().get_info()} this is a truck with {self.max_load} maximum load"
class HybridVehicle(HasGPS, Electric, Car):
    def __init__(self):
        HasGPS.__init__(self, self.has_gps)
        Electric.__init__(self, self.battery_capacity)
        Car.__init__(self, self.brand, self.model, self.year, self.mileage, self.wheel_count, self.doors_count)
        self.engine_type = "hybrid"

class WaterVehicle(Vehicle):
    def __init__(self, brand, model, year, mileage, displacement: float):
        super().__init__(brand, model, year, mileage)
        self.displacement = displacement
    def get_info(self):
        return f"{super().get_info()}, this is a water vehicle displacement of {self.displacement}"
class Boat(WaterVehicle):
    def __init__(self, brand, model, year, mileage, displacement, motor_type: str):
        super().__init__(brand, model, year, mileage, displacement)
        self.motor_type = motor_type
    def get_info(self):
        return f"{super().get_info()} this is also a boat with motor type - {self.motor_type}"
class Sailboat(Boat):
    def __init__(self, brand, model, year, mileage, displacement, motor_type, sail_area: float):
        super().__init__(brand, model, year, mileage, displacement, motor_type)
        self.sail_area = sail_area
    def get_info(self):
        return f"{super().get_info()} this is also a sail boat with sail area of {self.sail_area}"
class Ship(WaterVehicle):
    def __init__(self, brand, model, year, mileage, displacement, passenger_capacity: int):
        super().__init__(brand, model, year, mileage, displacement)    
        self.passenger_capacity = passenger_capacity
    def get_info(self):
        return f"{super().get_info()} this is also a ship with {self.passenger_capacity} passenger capacity"
class Fleet:
    def __init__(self):
        self.vehicles = []
    def add_vehicle(self, vehicle):
        self.vehicles.append(vehicle)
    def get_total_mileage(self):
        totmile = 0
        for vehicle in self.vehicles:
            totmile += vehicle.get_mileage()
        return totmile
    def get_vehicles_by_type(self, vehicle_type):
        return [vehicle for vehicle in self.vehicles if isinstance(vehicle, vehicle_type)]
    def get_oldest_vehicle(self, current_year):
        oldest = 0
        for vehicle in self.vehicles:
            if oldest < vehicle.get_age(current_year):
                oldest = vehicle.get_age(current_year)
        for vehicle in self.vehicles:
            if oldest == vehicle.get_age(current_year):
                return vehicle
    def find_vehicles_with_gps(self):
        return [vehicle for vehicle in self.vehicles if HasGPS]
        
    
        